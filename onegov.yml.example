applications:
  - path: /towns/*
    application: onegov.town.TownApp
    namespace: towns
    configuration:
      dsn: postgres://user:password@localhost:5432/database
      identity_secure: false
      identity_secret: very-secret-key
      csrf_secret: another-very-secret-key
      filestorage: fs.osfs.OSFS
      filestorage_options:
        root_path: './file-storage'
        create: true
      always_compile_theme: false
      sql_query_report: false
      profile: false
      mail_host: localhost
      mail_port: 1025
      mail_force_tls: false
      mail_username:
      mail_password:
      mail_sender: mail@onegovcloud.ch
      mail_use_directory: true
      mail_directory: './mails'

logging:
  formatters:
      simpleFormater:
          format: '%(asctime)s - %(levelname)s: %(message)s'
          datefmt: '%Y-%m-%d %H:%M:%S'

  handlers:
      console:
          class: logging.StreamHandler
          formatter: simpleFormater
          level: DEBUG
          stream: ext://sys.stdout

  loggers:
      onegov.core:
          level: DEBUG
          handlers: [console]
      onegov.town:
          level: DEBUG
          handlers: [console]
